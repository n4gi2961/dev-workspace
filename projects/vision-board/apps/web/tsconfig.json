      "@vision-board/shared": ["../../packages/shared/src"],
      "@vision-board/shared/*": ["../../packages/shared/src/*"],
      "@vision-board/supabase": ["../../packages/supabase/src"],
      "@vision-board/supabase/*": ["../../packages/supabase/src/*"]
