{
  "name": "vision-board-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": ["apps/*", "packages/*"],
  "pnpm": {
    "overrides": {
      "react": "19.1.0",
      "react-dom": "19.1.0"
    }
  },
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "dev:web": "turbo run dev --filter=@vision-board/web",
    "build:web": "turbo run build --filter=@vision-board/web"
  },
  "devDependencies": {
    "turbo": "^2.3.0",
    "typescript": "^5"
  },
  "packageManager": "pnpm@9.15.0"
}
